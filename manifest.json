{
    "author": "Rafael Prenholato <rprenhol@gmail.com>",
    "description": "Simple Vimeo link capture from embeded pages.",
    "manifest_version": 2,
    "name": "GetLink",
    "homepage_url": "https://github.com/rprenhol/getlink",
    "version": "1.4",
    "icons": {
        "48": "icon/48.png",
        "92": "icon/92.png"
    },

    "permissions": [
        "tabs", "activeTab", "storage", "menus", "clipboardWrite","https://player.vimeo.com/"
    ],

    "web_accessible_resources": [
        "icon/*"
    ],
    "options_ui": {
        "page": "options.html"
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["js/player.js","getlink.js"],
            "css": ["css/main.css"]
        }
    ],

    "background": {
        "scripts": [ "background.js" ]
    },

    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16":"icon/16.png",
            "32":"icon/32.png"
        }
    }
}
